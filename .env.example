# MyEventStream Configuration
# Copy this file to .env and update with your actual values

# Message Broker Configuration
# Kafka broker addresses (comma-separated)
# Example: KAFKA_BROKERS=localhost:9092,localhost:9093
KAFKA_BROKERS=

# Kafka topic to consume from
KAFKA_TOPIC=

# Kafka consumer group ID
KAFKA_GROUP_ID=myeventstream-consumer

# Service Configuration
# Metrics server port
METRICS_PORT=8080

# Worker pool size (number of concurrent workers)
WORKER_POOL_SIZE=10

# Internal queue buffer size (backpressure control)
QUEUE_BUFFER_SIZE=1000

# Retry Configuration
# Maximum number of retry attempts before DLQ
MAX_RETRY_ATTEMPTS=3

# Retry backoff base duration in seconds
RETRY_BACKOFF_BASE=1

# Dead-Letter Queue Configuration
# DLQ topic name
DLQ_TOPIC=myeventstream-dlq

# Observability Configuration
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Service name for logging and metrics
SERVICE_NAME=myeventstream

# Kafka Infrastructure Configuration (for docker-compose)
# Kafka Docker image version
KAFKA_IMAGE_VERSION=latest

# Auto-create topics if they don't exist
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true

# Replication factors (for single-node setup, use 1)
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
